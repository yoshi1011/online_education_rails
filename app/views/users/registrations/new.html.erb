<h2 class="text-3xl font-bold mb-6 text-center">新規登録</h2>

<div class="bg-white shadow-md rounded-lg p-8 max-w-sm mx-auto">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <div class="mb-4">
      <%= f.label :last_name, '姓', class: "block text-gray-700 font-bold mb-2" %>
      <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

    <div class="mb-4">
      <%= f.label :first_name, '名', class: "block text-gray-700 font-bold mb-2" %>
      <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

    <div class="mb-4">
      <%= f.label :email, class: "block text-gray-700 font-bold mb-2" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

    <div class="mb-4">
      <%= f.label :password, 'パスワード', class: "block text-gray-700 font-bold mb-2" %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
      <% end %><br/>
      <%= f.password_field :password, autocomplete: "new-password", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

    <div class="mb-6">
      <%= f.submit "登録", class: "bg-purple-700 hover:bg-purple-900 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline w-full cursor-pointer" %>
    </div>
  <% end %>

  <%= render "users/shared/links" %>
</div>
